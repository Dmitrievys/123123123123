<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2185"
    android:outlineSpotShadowColor="@android:color/holo_orange_dark"
    tools:context=".SignIn">

    <Button
        android:id="@+id/bSignIn"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F44336"
        android:text="Войти"
        app:iconTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/tpassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tpassword"
        app:layout_constraintTop_toBottomOf="@+id/tpassword" />

    <EditText
        android:id="@+id/temail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="230dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tpassword"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/temail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/temail"
        app:layout_constraintTop_toBottomOf="@+id/temail" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="558dp"
        android:layout_height="303dp"
        android:layout_marginStart="194dp"
        android:layout_marginEnd="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frame70" />

</androidx.constraintlayout.widget.ConstraintLayout>